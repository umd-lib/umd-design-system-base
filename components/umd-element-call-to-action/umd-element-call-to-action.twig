{#
/**
 * @file
 * UMD Design System CTA component.
 *
 * Available variables:
 * - theme: light or dark.
 * - cta_text: string.
 * - cta: string (url).
 * - cta_aria_label: string.
 * - element_size: large or standard.
 * - display: outline, secondary, primary.
*/
#}

<umd-element-call-to-action slot="actions" data-visual-size="{{ element_size }}" data-theme="{{ theme }}" data-display="{{ display }}">
  <a href="{{ cta }}" aria-label="{{ cta_aria_label }}">
    {{ cta_text }} 
  </a>
</umd-element-call-to-action>
