{#
/**
 * @file
 * UMD Design System quote component.
 *
 * Available variables:
 * - accordion_child_slot: Intended for accordion elements (slot).
 * - attribution: string.
 * - eyebrow: string.
 * - cta_slot: Call to Action (slot).
 * - body_slot: WYSIWYG (slot).
*/
#}

<umd-element-quote>
  <div slot="quote">
    {% block body_slot %}{% endblock %}
  </div>
  {% if attribution %}
    <p slot="attribution">
      {{ attribution }}
    </p>
  {% endif %}
  {% if eyebrow %}
    <p slot="attribution-sub-text">
      {{ eyebrow }}
    </p>
  {% endif %}
  <div slot="actions">
    {% block cta_slot %}{% endblock %}
  </div>
</umd-element-quote>
