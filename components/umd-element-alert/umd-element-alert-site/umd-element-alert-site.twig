{#
/**
 * @file
 * UMD Design System Alert site component.
 *
 * Available variables:
 * - headline: string.
 * - headline_link: string.
 * - body_slot: WYSIWYG body content (slot).
 * - cta_slot: Call to Action (slot).
*/
#}

<umd-element-alert-site>
  <h2 slot="headline">
    <a href="{{ headline_link }}">
      {{ headline }}
    </a>
  </h2>
  <div slot="body" class="umd-rich-text">
    {% block body_slot %}{% endblock %}
  </div>

  {% block cta_slot %}{% endblock %}
</umd-element-alert-site>
