{#
/**
 * @file
 * UMD Design System section intro wide component.
 *
 * Available variables:
 * - theme: string. light or dark.
 * - headline: string.
 * - cta_slot: Call to Action (slot).
*/
#}

<umd-element-section-intro-wide data-theme="{{ theme }}">
  <h2 slot="headline">
    {{ headline }}
  </h2>

  {% block cta_slot %}{% endblock %}
</umd-element-section-intro-wide>
